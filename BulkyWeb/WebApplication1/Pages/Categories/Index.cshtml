@page
@model WebApplication1.Pages.Categories.IndexModel


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="/categories/create" class="btn btn-primary float-end">
                <i class="bi bi-plus-lg"></i> Add New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Actions</th>  @* ✅ Added column for buttons *@
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.CategoriesList)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <a asp-page="/Categories/edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/Categories/delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
