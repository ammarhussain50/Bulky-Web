@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-end"> <i class="bi bi-plus-lg"></i> Add New Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>

            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>

                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>
